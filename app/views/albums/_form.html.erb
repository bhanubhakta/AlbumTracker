<a name="about"></a>
<div class="">
  <div class="container">
    <div class="alert-success">
      <%= flash[:success] unless flash[:success].blank? %>
    </div>
    <div class="alert-danger">
      <%= flash[:error] unless flash[:error].blank? %>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div class="intro-message">
        <%= form_for @album, method: @method || 'POST', :html => {class: "container"} do |album_form| %>
          <div class="row">
            <div class="col-md-6 mb-3">
              <label for="validationCustom01">Artist</label>
              <%= album_form.text_field :artist, class: "form-control", placeholder: "artist", required: true %>
            </div>

            <div class="col-md-6 mb-3">
              <label for="validationCustom02">Album</label>
              <%= album_form.text_field :album, class: "form-control", placeholder: "album", required: true %>
            </div>
          </div>

          <hr/>

          <div class="row">
            <div class="col-md-6 mb-3">
              <label for="validationCustom03">Title</label>
              <%= album_form.text_field :title, class: "form-control", placeholder: "title", required: true %>

            </div>
            <div class="col-md-3 mb-3">
              <label for="validationCustom04">Year</label>
              <%= album_form.select :year, options_for_select(year_range, 2010), {}, {class: "form-control" }%>

            </div>
            <div class="col-md-3 mb-3">
              <label for="validationCustom05">Record condition (5 highest, 1 lowest)</label>
              <%= album_form.select :record_condition, options_for_select(1..5, 5), {}, {class: "form-control"} %>
            </div>
          </div>
          <hr/>
          <%= album_form.submit class: "btn btn-success" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
