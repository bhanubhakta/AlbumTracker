<a name="about"></a>
<div class="intro-header">
  <div class="container">
    <div class="alert-success">
      <%= flash[:success] unless flash[:success].blank? %>
    </div>
    <div class="alert-danger">
      <%= flash[:error] unless flash[:error].blank? %>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div class="intro-message">
          <h2>Welcome to album tracker</h2>
          <h3>Create new record</h3>
          <%= link_to 'Create new', new_album_path, class: 'btn btn-success btn-large' %>

          <h3>OR</h3>
          <h3>Upload file containing list of albums</h3>
            <%= link_to 'Download sample file', '/sample.csv', class: "btn btn-primary btn-large" %>
          <hr class="intro-divider">
          <ul class="list-inline intro-social-buttons">
            <%= form_tag("/albums/upload", :multipart => true) do %>
            <label class="btn btn-default btn-file">
              <%= file_field_tag :file, :accept => 'text/csv' %>
            </label>
            <br/><br/>
            <%= submit_tag 'Upload', :class => "btn btn-default btn-lg btn-success", disabled: true%>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
